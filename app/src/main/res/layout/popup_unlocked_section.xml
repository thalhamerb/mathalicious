<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@drawable/popup_border">    <TextView        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:textSize="@dimen/title_textSize"        android:text="You unlocked Einstein's Section 1!"        android:theme="@style/AppTheme.BoldAndItalic"        android:textColor="#FFFFFF"        android:id="@+id/title"        android:layout_marginTop="@dimen/title_marginTop"        android:layout_marginLeft="@dimen/title_marginTop"        android:layout_marginRight="@dimen/title_marginTop"        android:gravity="center" />    <TextView        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:textSize="@dimen/unlocked_screen_subtitle_textSize"        android:text="Powers earned"        android:id="@+id/subtitle"        android:textColor="#FFFFFF"        android:layout_below="@id/title"        android:layout_marginTop="@dimen/unlocked_screen_subtitle_marginTop"        android:layout_centerHorizontal="true"        android:gravity="center" />    <GridLayout        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:id="@+id/powerGrid"        android:columnCount="2"        android:layout_below="@id/subtitle"        android:layout_marginTop="@dimen/unlocked_screen_grid_marginTop"        android:layout_centerHorizontal="true">        <ImageView            android:layout_width="@dimen/unlocked_screen_gridImage_sideLength"            android:layout_height="@dimen/unlocked_screen_gridImage_sideLength"            android:id="@+id/CLEAR_ONE_NUM_image"            android:background="@drawable/tile_power_single"            android:padding="@dimen/unlocked_screen_gridImage_padding" />        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:textSize="@dimen/unlocked_screen_power_textSize"            android:text="x3"            android:textColor="#FFFFFF"            android:id="@+id/CLEAR_ONE_NUM_qty"            android:layout_margin="@dimen/unlocked_screen_subtitle_marginTop"            android:layout_centerHorizontal="true"            android:gravity="center" />        <ImageView            android:layout_width="@dimen/unlocked_screen_gridImage_sideLength"            android:layout_height="@dimen/unlocked_screen_gridImage_sideLength"            android:id="@+id/CLEAR_ALL_NUM_image"            android:background="@drawable/tile_power_multi"            android:padding="@dimen/unlocked_screen_gridImage_padding" />        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:textSize="@dimen/unlocked_screen_power_textSize"            android:text="x3"            android:textColor="#FFFFFF"            android:id="@+id/CLEAR_ALL_NUM_qty"            android:layout_margin="@dimen/unlocked_screen_subtitle_marginTop"            android:layout_centerHorizontal="true"            android:gravity="center" />        <ImageView            android:layout_width="@dimen/unlocked_screen_gridImage_sideLength"            android:layout_height="@dimen/unlocked_screen_gridImage_sideLength"            android:id="@+id/PAUSE_TIME_image"            android:background="@drawable/time_power"            android:padding="@dimen/unlocked_screen_gridImage_padding" />        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:textSize="@dimen/unlocked_screen_power_textSize"            android:text="x3"            android:textColor="#FFFFFF"            android:id="@+id/PAUSE_TIME_qty"            android:layout_margin="@dimen/unlocked_screen_subtitle_marginTop"            android:layout_centerHorizontal="true"            android:gravity="center" />    </GridLayout>    <Button        android:layout_width="@dimen/single_button_width"        android:layout_height="@dimen/single_button_height"        android:text="Awesome!"        android:textColor="#ffffff"        android:textSize="@dimen/single_button_textSize"        android:id="@+id/okButton"        android:background="@drawable/my_button"        android:layout_centerHorizontal="true"        android:layout_below="@id/powerGrid"        android:layout_margin="@dimen/single_button_marginBottom" /></RelativeLayout>