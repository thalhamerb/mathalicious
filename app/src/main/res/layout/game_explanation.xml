<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@drawable/popup_border">    <TextView        android:text="Operations"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:textSize="@dimen/title_textSize"        android:textColor="#ffffff"        android:layout_marginTop="@dimen/title_marginTop"        android:id="@+id/title"        android:layout_alignParentTop="true"        android:layout_centerHorizontal="true"        android:theme="@style/AppTheme.BoldAndItalic" />    <TextView        android:text="Add - Choose blocks horizontally or vertically to add up to specified number."        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:textSize="@dimen/game_exp_desc_textSize"        android:textColor="#ffffff"        android:layout_below="@+id/title"        android:id="@+id/description"        android:layout_marginLeft="@dimen/game_exp_desc_margin"        android:layout_marginRight="@dimen/game_exp_desc_margin"        android:layout_marginTop="@dimen/game_exp_desc_margin"        android:layout_marginBottom="@dimen/game_exp_desc_marginBottom"        android:layout_centerHorizontal="true" />    <ImageView        android:layout_width="match_parent"        android:layout_height="@dimen/game_exp_image_height"        android:id="@+id/image"        android:layout_below="@+id/description"        android:layout_centerHorizontal="true"        android:src="@mipmap/explain_add"        android:layout_marginLeft="@dimen/game_exp_image_side_margin"        android:layout_marginRight="@dimen/game_exp_image_side_margin" />    <Button        android:layout_width="@dimen/single_button_width"        android:layout_height="@dimen/single_button_height"        android:text="Got it!"        android:textColor="#ffffff"        android:textSize="@dimen/single_button_textSize"        android:id="@+id/continueButton"        android:layout_gravity="center_horizontal"        android:layout_below="@id/image"        android:background="@drawable/my_button"        android:width="@dimen/abc_action_bar_stacked_tab_max_width"        android:layout_centerHorizontal="true"        android:layout_margin="@dimen/single_button_marginBottom" /></RelativeLayout>