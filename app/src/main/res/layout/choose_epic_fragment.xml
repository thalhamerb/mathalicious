<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical">    <TextView        android:text="Einstein"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:textSize="@dimen/titleTextSize"        android:layout_centerHorizontal="true"        android:paddingTop="@dimen/titlePaddingTop"        android:id="@+id/personName" />    <FrameLayout        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_centerHorizontal="true"        android:layout_centerVertical="true"        android:id="@+id/lock_frame">        <ImageButton            android:layout_width="@dimen/mainImageSize"            android:layout_height="@dimen/mainImageSize"            android:id="@+id/imageButton"            android:background="@mipmap/padlock" />        <LinearLayout            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_gravity="center_horizontal|bottom"            android:orientation="horizontal"            android:layout_marginBottom="@dimen/mainImageTextBottom">            <TextView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:textAppearance="?android:attr/textAppearanceLarge"                android:id="@+id/numOfStars"                android:textSize="@dimen/mainImageTextSize"                android:text="40" />            <ImageView                android:layout_width="@dimen/mainImageStarSize"                android:layout_height="@dimen/mainImageStarSize"                android:id="@+id/star"                android:baselineAlignBottom="true"                android:background="@mipmap/star"                android:layout_marginLeft="5dp" />        </LinearLayout>    </FrameLayout></RelativeLayout>