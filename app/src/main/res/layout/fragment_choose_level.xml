<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="wrap_content"    tools:context="com.thalhamer.numbersgame.Activity.ChooseLevelActivity"    android:id="@+id/fragment_choose_level"    android:background="@color/mainScreenBackgroundColor"    android:orientation="vertical">    <TextView        android:text="Section 1"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:textSize="@dimen/titleTextSize"        android:layout_centerHorizontal="true"        android:layout_marginTop="@dimen/titlePaddingTop"        android:id="@+id/chooseLevelTitle"        android:layout_alignParentTop="true" />    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="match_parent"        android:id="@+id/level_lock_layout">        <FrameLayout            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_centerHorizontal="true"            android:layout_centerVertical="true"            android:id="@+id/lock_frame">            <ImageButton                android:layout_width="@dimen/mainImageSize"                android:layout_height="@dimen/mainImageSize"                android:id="@+id/imageButton"                android:background="@mipmap/padlock" />            <LinearLayout                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_gravity="center_horizontal|bottom"                android:orientation="horizontal"                android:layout_marginBottom="@dimen/mainImageTextBottom">                <TextView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:textAppearance="?android:attr/textAppearanceLarge"                    android:id="@+id/numOfStars"                    android:textSize="@dimen/mainImageTextSize"                    android:text="40" />                <ImageView                    android:layout_width="@dimen/mainImageStarSize"                    android:layout_height="@dimen/mainImageStarSize"                    android:background="@mipmap/star"                    android:baselineAlignBottom="true"                    android:layout_marginLeft="5dp" />            </LinearLayout>        </FrameLayout>    </RelativeLayout>    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="match_parent"        android:id="@+id/level_button_layout">        <TextView            android:text="Total: "            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:textSize="@dimen/totalTextSize"            android:paddingTop="@dimen/totalStarMarginTop"            android:id="@+id/stars_level"            android:layout_marginRight="5dp"            android:layout_toStartOf="@+id/star" />        <ImageView            android:layout_width="@dimen/totalStarSize"            android:layout_height="@dimen/totalStarSize"            android:id="@+id/star"            android:background="@mipmap/star"            android:layout_alignParentEnd="true"            android:layout_marginTop="@dimen/totalStarMarginTop"            android:layout_marginRight="@dimen/totalStarMarginTop" />        <include            layout="@layout/fragment_levels_grid"            android:id="@+id/fragment_levels_grid" />    </RelativeLayout></RelativeLayout>