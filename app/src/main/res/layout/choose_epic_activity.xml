<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@color/mainScreenBackgroundColor"    android:id="@+id/choose_epic_activity"    android:orientation="vertical">    <android.support.v4.view.ViewPager        android:id="@+id/epicViewPager"        android:layout_width="fill_parent"        android:layout_height="fill_parent" />    <TextView        android:text="Total: "        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:textSize="@dimen/totalTextSize"        android:paddingTop="@dimen/totalStarMarginTop"        android:id="@+id/stars_epic"        android:layout_marginRight="5dp"        android:layout_toStartOf="@+id/star" />    <ImageView        android:layout_width="@dimen/totalStarSize"        android:layout_height="@dimen/totalStarSize"        android:id="@+id/star"        android:background="@drawable/star"        android:layout_alignParentEnd="true"        android:layout_marginTop="@dimen/totalStarMarginTop"        android:layout_marginRight="@dimen/totalStarMarginTop" />    <TextView        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:text="&lt;"        android:textSize="@dimen/scrollArrowSize"        android:textStyle="bold"        android:textColor="#a9a9a9"        android:id="@+id/leftArrow"        android:layout_centerVertical="true"        android:layout_marginStart="@dimen/scrollArrowMargin"        android:visibility="gone" />    <TextView        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:text=">"        android:textSize="@dimen/scrollArrowSize"        android:textStyle="bold"        android:textColor="#a9a9a9"        android:id="@+id/rightArrow"        android:layout_centerVertical="true"        android:layout_alignParentEnd="true"        android:layout_marginEnd="@dimen/scrollArrowMargin" /></RelativeLayout>