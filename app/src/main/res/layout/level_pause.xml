<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@color/mainScreenBackgroundColor"    android:visibility="gone">    <GridLayout        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:columnCount="1"        android:rowCount="4"        android:layout_centerInParent="true"        android:clickable="true"        android:id="@+id/gamePausedButtonGridLayout">        <Button            android:layout_width="@dimen/single_button_width"            android:layout_height="@dimen/single_button_height"            android:text="Unpause"            android:textColor="#ffffff"            android:textSize="@dimen/single_button_textSize"            android:id="@+id/mainGameUnpauseButton"            android:layout_column="0"            android:layout_row="0"            android:layout_gravity="center_horizontal"            android:background="@drawable/my_button"            android:width="@dimen/abc_action_bar_stacked_tab_max_width" />        <Button            android:layout_width="@dimen/single_button_width"            android:layout_height="@dimen/single_button_height"            android:text="Level Info"            android:textColor="#ffffff"            android:textSize="@dimen/single_button_textSize"            android:id="@+id/mainGameInfoButton"            android:layout_column="0"            android:layout_row="1"            android:layout_gravity="center_horizontal"            android:background="@drawable/my_button"            android:width="@dimen/abc_action_bar_stacked_tab_max_width"            android:layout_marginTop="20dp" />        <Button            android:layout_width="@dimen/single_button_width"            android:layout_height="@dimen/single_button_height"            android:text="Level Explain"            android:textColor="#ffffff"            android:textSize="@dimen/single_button_textSize"            android:id="@+id/mainGameExplanationButton"            android:layout_column="0"            android:layout_row="2"            android:layout_gravity="center_horizontal"            android:background="@drawable/my_button"            android:width="@dimen/abc_action_bar_stacked_tab_max_width"            android:layout_marginTop="20dp" />        <Button            android:layout_width="@dimen/single_button_width"            android:layout_height="@dimen/single_button_height"            android:text="Exit"            android:textColor="#ffffff"            android:textSize="@dimen/single_button_textSize"            android:id="@+id/mainGameExitButton"            android:layout_column="0"            android:layout_row="3"            android:layout_gravity="center_horizontal"            android:background="@drawable/my_button"            android:width="@dimen/abc_action_bar_stacked_tab_max_width"            android:layout_marginTop="20dp" />    </GridLayout></RelativeLayout>